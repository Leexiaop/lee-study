<!--index.wxml-->
<view class="container">
	<view class="banner">
		<van-image
			class="img"
			width="72"
			height="72"
			round
			lazy-load
			src="{{hasUserInfo ? userInfo.avatarUrl : 'https://img.yzcdn.cn/vant/cat.jpeg'}}"
		/>
	</view>
	<view class="nav">
		<view class="up">
			<view>
				<view>点赞</view>
				<view>0</view>
			</view>
			<view>
				<view>收藏</view>
				<view>0</view>
			</view>
			<view>
				<view>评论</view>
				<view>0</view>
			</view>
		</view>
		<van-button wx:if="{{!hasUserInfo}}" type="primary" block size="small" bindtap="goLogin">去登录</van-button>
	</view>
	<van-cell-group>
		<van-cell title="我的点赞" is-link bindtap="onItemClick" data-type="1" border="{{false}}" />
		<van-cell title="我的收藏" is-link bindtap="onItemClick" data-type="2" border="{{false}}" />
		<van-cell title="我的评论" is-link bindtap="onItemClick" data-type="3" border="{{false}}" />
        <van-cell title="管理后台" is-link bindtap="onItemClick" data-type="4" border="{{false}}" />
        <van-cell title="监控后台" is-link bindtap="onItemClick" data-type="5" border="{{false}}" />
        <van-cell title="渲染案例" is-link bindtap="onItemClick" data-type="6" border="{{false}}" />
	</van-cell-group>
	<van-notice-bar
		class="notice"
		left-icon="volume-o"
		text="目前功能尚未完善，还在加紧开发中，敬请期待..."
	/>
</view>
